{
  "compilerOptions": {
    "baseUrl": "src", // Указывает базовую директорию для разрешения путей
    "paths": {
      "@routes/*": ["routes/*"],
    },
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
  },
  "include": ["src/**/*"]
}